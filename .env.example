# ================================================
# TicketBuster - Environment Variables (Development)
# ================================================
# Copy this file to .env and adjust values as needed
# Do NOT commit .env to git (already in .gitignore)

# ================================================
# PostgreSQL Configuration
# ================================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=ticketbuster
POSTGRES_PORT=5432

# Connection string format for services
# postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://admin:admin@postgres:5432/ticketbuster

# ================================================
# RabbitMQ Configuration
# ================================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Connection string format for services
# amqp://[user]:[password]@[host]:[port]/[vhost]
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# ================================================
# Keycloak Configuration
# ================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8080

# Public URL (for frontend/clients)
KEYCLOAK_PUBLIC_URL=http://localhost:8080

# ================================================
# Application Services Configuration
# (For Etapa 3 when microservices are integrated)
# ================================================

# API Gateway
API_GATEWAY_PORT=3000

# Catalog Service
CATALOG_SERVICE_PORT=3001
CATALOG_SERVICE_GRPC_PORT=50051

# Order Worker
ORDER_WORKER_PORT=8000

# Notification Service
NOTIFICATION_SERVICE_PORT=3002

# Frontend
FRONTEND_PORT=5173

# ================================================
# JWT & Security
# ================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=3600

# ================================================
# Logging & Monitoring
# ================================================
LOG_LEVEL=debug
NODE_ENV=development

# ================================================
# Feature Flags
# ================================================
ENABLE_SWAGGER=true
ENABLE_CORS=true
