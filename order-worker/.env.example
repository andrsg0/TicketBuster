# TicketBuster Order Worker - Environment Configuration
# Copy this to .env and adjust values for your environment

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=15433
DB_NAME=ticketbuster
DB_USER=admin
DB_PASSWORD=admin
DB_SCHEMA=db_orders

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Names
ORDERS_QUEUE=orders_queue
NOTIFICATIONS_QUEUE=notifications_queue

# ===========================================
# gRPC Configuration (Catalog Service)
# ===========================================
GRPC_CATALOG_HOST=localhost
GRPC_CATALOG_PORT=50051

# ===========================================
# Worker Configuration
# ===========================================
# Number of messages to prefetch (affects parallelism)
PREFETCH_COUNT=1

# Unique worker name (useful for K8s pods)
WORKER_NAME=order-worker-1

# ===========================================
# Logging
# ===========================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
